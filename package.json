{
  "name": "@akashic/game-driver",
  "version": "0.16.0",
  "description": "The driver module for the games using Akashic Engine",
  "main": "index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "prepublish": "npm run clean && npm run build",
    "ver": "tsc --version",
    "clean": "rm -rf lib/ && rm -rf spec/lib/ spec/helpers/lib/",
    "build": "tsc -p ./src/ && npm run browserify",
    "browserify": "shx mkdir -p build && browserify -r ./lib/index.js:@akashic/game-driver -x ./node_modules/@akashic/akashic-engine/lib/main.node.js -o build/game-driver.js && npm run browserify:ae",
    "browserify:ae": "browserify -r ./node_modules/@akashic/akashic-engine/lib/main.node.js:@akashic/akashic-engine  -o build/akashic-engine.js",
    "lint": "npm run lint:ts && npm run lint:md",
    "lint:ts": "tslint src/*.ts src/auxiliary/*.ts spec/src/*.ts spec/helpers/src/*.ts",
    "lint:md": "remark ./*.md --frail --no-stdout --quiet --rc-path ./.remarkrc",
    "test": "npm run build && npm run test:compile && jest && npm run lint",
    "test:compile": "tsc -p spec/helpers/src/ && tsc -p spec/src/"
  },
  "author": "DWANGO Co., Ltd.",
  "license": "MIT",
  "files": [
    "package.json",
    "README.md",
    "build",
    "lib",
    "index.js"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/akashic-games/game-driver.git"
  },
  "publishConfig": {
    "@akashic:registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@akashic/akashic-pdi": "~1.15.0",
    "@akashic/amflow": "~3.0.0",
    "@akashic/playlog": "~3.1.0",
    "@akashic/remark-preset-lint": "~0.1.1",
    "@types/jest": "24.0.22",
    "@types/node": "12.12.6",
    "browserify": "^16.5.0",
    "jest": "24.9.0",
    "remark-cli": "~7.0.0",
    "shx": "~0.3.2",
    "tslint": "^5.20.1",
    "typescript": "^3.7.2"
  },
  "dependencies": {
    "@akashic/akashic-engine": "~1.14.0",
    "es6-promise": "^4.2.8"
  }
}
