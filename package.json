{
  "name": "@akashic/game-driver",
  "version": "0.11.21",
  "description": "The driver module for the games using Akashic Engine",
  "main": "index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "prepublish": "npm run clean && gulp minify",
    "ver": "tsc --version",
    "clean": "npm run clean-ts && npm run clean-test",
    "clean-ts": "rm -rf lib/",
    "clean-test": "rm -rf spec/lib/ spec/helpers/lib/",
    "build": "gulp compile",
    "compile-ts": "tsc -p ./src/",
    "compile-test": "tsc -p spec/helpers/src/ && tsc -p spec/src/",
    "lint": "npm run lint:ts && npm run lint:md",
    "lint:ts": "tslint src/*.ts src/auxiliary/*.ts spec/src/*.ts spec/helpers/src/*.ts",
    "lint:md": "remark ./*.md --frail --no-stdout --quiet --rc-path ./.remarkrc",
    "test": "gulp test && npm run lint",
    "_build": "gulp compile"
  },
  "author": "DWANGO Co., Ltd.",
  "license": "MIT",
  "files": [
    "package.json",
    "README.md",
    "build",
    "lib",
    "index.js"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/akashic-games/game-driver.git"
  },
  "publishConfig": {
    "@akashic:registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@akashic/akashic-pdi": "~1.10.0",
    "@akashic/amflow": "~0.2.1",
    "@akashic/playlog": "~1.3.0",
    "@types/jasmine-node": "1.14.33",
    "@types/node": "10.11.6",
    "browserify": "^13.0.0",
    "gulp": "^3.8.11",
    "gulp-istanbul": "~0.6.0",
    "gulp-jasmine": "~2.0.0",
    "gulp-rename": "^1.2.0",
    "gulp-shell": "^0.5.2",
    "gulp-sourcemaps": "^1.6.0",
    "gulp-uglify": "~1.0.1",
    "gulp-util": "^3.0.7",
    "jasmine": "~2.1.1",
    "jasmine-reporters": "~2.0.4",
    "jasmine-terminal-reporter": "~0.9.1",
    "remark-cli": "~2.0.0",
    "remark-lint": "~5.0.1",
    "tslint": "^3.6.0",
    "typescript": "^2.1.6",
    "vinyl-buffer": "^1.0.0",
    "vinyl-source-stream": "^1.1.0"
  },
  "dependencies": {
    "@akashic/akashic-engine": "~1.12.9",
    "es6-promise": "^3.1.2"
  }
}
